<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomAnim</item>
    </style>
    
    <style name="CustomAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slid_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slid_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slid_out</item>
        <item name="android:activityCloseExitAnimation">@anim/slid_in</item>
    </style>

</resources>